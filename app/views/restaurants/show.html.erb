<div class="container mt-3">  
  <h2><%= @restaurant.name %></h2>

  <ul class="list-group">
    <li class="list-group-item">Category : <strong><%= @restaurant.category %></strong></li>
    <li class="list-group-item">Address : <strong><%= @restaurant.address %></strong></li>
    <li class="list-group-item">Phone Number : <strong><%= @restaurant.phone_number.nil? ? "No phone number to display" : @restaurant.phone_number %></strong></li>
    <li class="list-group-item">Reviews :
      <ul>
        <% @restaurant.reviews.each do |review| %>
          <li>"<%= review.content %>" rated <%= review.rating %>/5</li>
        <% end %>
      </ul>
    </li>
  </ul>
  <%= link_to "Add a review", new_restaurant_review_path(@restaurant) %>
</div>



